<!doctype html>
<html>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>Admin Login - Calcutta Youth Meet</title>
		<link rel="stylesheet" href="/styles.css" />
	</head>
	<body>
		<div class="container">
			<div class="header">
				<img src="/images/logo.svg" alt="Calcutta Youth Meet Logo" class="logo" />
				<div class="brand">Calcutta Youth Meet<br />Chapter 9<br />26th & 27th September<br />Gyan Manch</div>
			</div>
			<div class="main">
				<div class="card">
					<h1>Admin Login</h1>
					<p class="badge">Fixed admin phone: 9641072337</p>
					<% if (typeof error !== 'undefined') { %>
						<div class="error"><%= error %></div>
					<% } %>
					<form method="post" action="/admin/login">
						<label>Access Code</label>
						<input type="text" name="code" placeholder="Enter access code" required />
						<button type="submit" class="secondary">Login</button>
					</form>
				</div>
			</div>
		</div>
	</body>
</html>
